ScreenManager:
    LoginScreen:
        name: "login"

    MainScreen:
        name:"main"
        
<MainScreen> 
    BoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            title: "Inventaire"
            md_bg_color:53/255, 2/255, 2/255, 1
            right_action_items: [["menu", lambda x:0]]# app.callback(x)]]
<LoginScreen>
    MDBoxLayout:
        orientation: 'vertical'
        padding: '50dp','100dp','50dp','100dp'
        spacing: '0dp'
        md_bg_color: [1,1,1,1]
        MDBoxLayout:
            orientation: 'vertical'
            padding: '0dp'
            spacing: '0dp'
            md_bg_color: [1,1,1,1]
            MDLabel:
                text:"Content de te Revoir!"
                theme_text_color:"Primary"
                font_size: "26sp"
                font_style: "H5"
                bold: True 
            MDLabel:
                text:"Entrez Votre Utilisateur et Mot de Passe"
                theme_text_color:"Secondary"
                font_size: "14sp"
        MDTextField:
            id: username_input
            font_size: "20sp"
            hint_text: "Nom d'Utilisateur"
         

        MDRelativeLayout:
            MDTextField:
                id: password_input
                font_size: "20sp"
                hint_text: "Mot de Passe"
                password: True
                #icon_left: "key-variant"
                helper_text_mode: "on_error"
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: password_input.width - self.width + dp(8), 0
                theme_text_color: "Hint"
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    password_input.password = False if password_input.password is True else True

        MDFillRoundFlatButton:
            text:"Connexion"
            theme_text_color: "Custom"
            font_size: "20sp"
            font_style: "H6" 
            text_color: 1, 1, 1, 1
            md_bg_color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            padding: 50, 10, 50, 10 
            
            on_release: app.login(username_input.text, password_input.text)
            
            width: self.parent.width * 0.8
            size_hint_x: 0.8 
        MDLabel:
            id: status_label
            text: ""
            theme_text_color: "Error"

